{
  "autoformat": false,
  "options": {
    "preset": "jquery",
    "indent": {
      "value": "  ",
      "alignComments": false,
      "FunctionDeclaration": 2, /*  NO SENSE */
      /*"FunctionDeclarationClosingBrace": 1,  /*  NO SENSE */
      "TopLevelFunctionBlock": 1,
    },
    "lineBreak": {
      "before": {
        "Property": "0",
        "ElseIfStatement": ">=1",
        "ElseStatement": ">=1",
        "FunctionDeclaration": ">=2",
        "ObjectExpressionClosingBrace": ">=1",
        "ReturnStatement": ">=2",
      },
      "after": {
        "BlockStatement": ">=1",
        "FunctionDeclarationClosingBrace": ">=2",
        "ForStatementClosingBrace": ">=2",
        "IfStatementClosingBrace": ">=2",
        "ElseIfStatementClosingBrace": ">=2",
        "ElseStatementClosingBrace": ">=2",
        "WhileStatementClosingBrace": ">=2",
        "ObjectExpressionOpeningBrace": ">=1",
        "ReturnStatement": 1,
      }
    },
    "whiteSpace": {
      "removeTrailing": 1,
      "before": {
        "Property": -1,
        "FunctionName": 1,
        "ObjectPatternComma": 0, /* NO SENSE */
        "LineComment": 2,
        "CallExpressionOpeningParentheses": 0,
        "CallExpressionClosingParentheses": 1,
        "ForInStatementExpressionOpening": 0,
        "ForInStatementExpressionClosing": 1,
        "ForStatementExpressionOpening": 0,
        "ForStatementExpressionClosing": 1,
        "IfStatementConditionalOpening": 0,
        "IfStatementConditionalClosing": 1,
        "SwitchDiscriminantOpening": 0,
        "SwitchDiscriminantClosing": 1,
        "WhileStatementConditionalOpening": 0,
        "WhileStatementConditionalClosing": 1,
      /*            "IfStatementClosingBrace" : 2,  /*  NO SENSE */
      /*            "FunctionDeclarationClosingBrace" : 2,  /* NO SENSE */
      },
      "after": {
        "FunctionName": 0,
        "ObjectPatternComma": 0, /* NO SENSE */
        "CallExpressionOpeningParentheses": 1,
        "CallExpressionClosingParentheses": 0,
        "ForInStatementExpressionOpening": 1,
        "ForInStatementExpressionClosing": 1,
        "ForStatementExpressionOpening": 1,
        "ForStatementExpressionClosing": 1,
        "IfStatementConditionalOpening": 1,
        "IfStatementConditionalClosing": 1,
        "SwitchDiscriminantOpening": 1,
        "SwitchDiscriminantClosing": 1,
        "WhileStatementConditionalOpening": 1,
        "WhileStatementConditionalClosing": 1,
      }
    },
    "plugins": [
      "esformatter-braces",
      "esformatter-dot-notation",
    /*      "esformatter-jquery-chain" */
    ],
    "pipe": {
      "after": [
        "sed -e 's:^\\( *\\)}:\\1  }:g' ",
        "sed -e 's:{ \\+}:{}:g' ",
        "sed -e 's:\\[ \\+\\]:[]:g' ",
        "sed -e 's:^ \\+console\\.:console.:' "
      ]
    }
  }
}
